@{
    ViewData["Title"] = "Trace Route";
}

<h1 class="pb-3">Request</h1>

<div>
    <div class="form-group row">
        <label for="host" class="col-sm-2">Host Name</label>
        <input class="form-control col-sm-5" id="host" />
    </div>
</div>
<input type="submit" id="startTrace" class="btn btn-primary" />

<hr />
<h1 class="pb-3">Response</h1>

<div id="results">
</div>

<br>
<div class="row alert alert-danger pb-3" style="display:none" role="alert" id="error">
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/traceRt.js"></script>



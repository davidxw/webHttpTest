@model webHttpTest.Models.TraceRtViewModel

@{
    ViewData["Title"] = "TraceRt";
}

<h1 class="pb-3">Request</h1>
<form method="post">
    <div>
        <div class="form-group row">
            <label class="col-sm-2" asp-for="DestinationHost"></label>
            <input class="form-control col-sm-5" asp-for="DestinationHost" />
        </div>
    </div>
    <button class="btn btn-primary" asp-controller="Home" asp-action="TraceRt">Send</button>
</form>
<hr />
<h1 class="pb-3">Response</h1>
@if (!string.IsNullOrEmpty(Model.ErrorText))
{
    <div class="row alert alert-danger pb-3" role="alert">
        @Html.DisplayText("ErrorText")
    </div>
}

<div>
@if (Model.Results != null)
{
    foreach (var result in Model.Results)
    {
        @:<div class="row">
        @:    <div class="col-sm-1">@result.hop</div>
        @:    <div class="col-sm-1">@result.FormattedEt1</div>
        @:    <div class="col-sm-10">@result.FormattedHostName</div>
        @:</div>
    }
}
</div>>


